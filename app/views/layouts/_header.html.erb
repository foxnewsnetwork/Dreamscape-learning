<header>
<%= link_to logo, home_path %>
<nav class="round">
  <ul>
    <li><%= link_to "Home" , home_path %></li>
    <li><%= link_to "Updates" , updates_path %></li>
    <% if signed_in? %>
      <li><%= link_to "Profile", current_user %></li>
